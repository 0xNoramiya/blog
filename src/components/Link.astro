---
import { cn } from '@/lib/utils'

interface Props {
  href: string
  external?: boolean
  class?: string
  underline?: boolean
  [key: string]: any
}

const { href, external, class: className, underline, ...rest } = Astro.props

// Prepend base path for internal links (starting with /)
const base = import.meta.env.BASE_URL || ''
const resolvedHref = !external && href.startsWith('/') && !href.startsWith(base) 
  ? `${base}${href}` 
  : href
---

<a
  href={resolvedHref}
  target={external ? '_blank' : '_self'}
  class={cn(
    'inline-block transition-colors duration-300 ease-in-out',
    underline &&
      'underline decoration-muted-foreground underline-offset-[3px] hover:decoration-foreground',
    className,
  )}
  {...rest}
>
  <slot />
</a>
